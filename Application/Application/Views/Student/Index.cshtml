@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    Student
</section>
<section class="content ">
    <div class="row" ng-controller="StudentController">
        <section class="col-lg-4">

            <div class="box box-primary">
                <div class="box-header" style="cursor: move;">

                    <i class="fa fa-envelope"></i>
                    <h3 class="box-title">
                        Student
                    </h3>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" ng-model="Student.Name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Roll</label>
                        <input type="text" ng-model="Student.Roll" class="form-control" required>
                    </div>
                </div><!-- /.box-body-->

                <div class="box-footer">
                    <button type="submit" ng-disabled="SaveDisabled" class="btn btn-primary" ng-click="Save()">Save</button>
                    @*<button type="submit" ng-disabled="DeleteDisabled" class="btn btn-danger" ng-click="Delete()">Delete</button>*@
                    <button type="submit" class="btn btn-warning" ng-click="Reset()">Reset</button>
                </div>
            </div>
        </section>
        <section class="col-lg-8">

            <div class="box box-primary">
                <div class="box-header" style="cursor: move;">

                    <i class="fa fa-male"></i>
                    <h3 class="box-title">
                        Students
                    </h3>
                </div>
                <div class="box-body">

                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Roll</th>
                                <th><i class="fa fa-edit"></i>Action</th>
                            </tr>
                            <tr ng-repeat="student in Students">
                                <td>{{student.Name}}</td>
                                <td>{{student.Roll}}</td>
                                <td><button class="btn btn-success" ng-click="Edit($index)">Edit</button>
                                    <button class="btn btn-danger" ng-click="Delete($index)">Delete</button>
                                </td>
                                
                            </tr>

                        </tbody>
                    </table>
                </div>
        </section>
    </div>
</section>
@section scripts{


<script src="~/Scripts/js/Student/StudentCtrl.js"></script>



}